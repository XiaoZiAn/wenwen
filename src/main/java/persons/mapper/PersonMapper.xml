<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="persons.mapper.PersonMapper">
    <insert id="insert" parameterType="persons.dao.PersonDao">
        insert into person (
            person_id,
            personname,
            person_age,
            person_sex,
            person_birthday)
        values (
            #{personId, jdbcType=VARCHAR},
			#{personName, jdbcType=VARCHAR},
			#{personAge, jdbcType=INTEGER},
			#{personSex, jdbcType=VARCHAR},
			#{personBirthday, jdbcType=VARCHAR})
    </insert>
    <select id="select" resultType="persons.dao.PersonDao">
        select <include refid="Person_List" />
        from person p
        <!--where-->
          <!--<if test="personId != null and personId != ''.toString()">-->
              <!--p.person_id = #{personId, jdbcType=VARCHAR}-->
          <!--</if>-->
          <!--<if test="personName !=null and personName != ''.toString()">-->
