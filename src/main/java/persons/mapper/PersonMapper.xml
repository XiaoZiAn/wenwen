          <!--</if>-->
          <!--<if test="personAge !=null and personAge != ''.toString()">-->
            <!--and p.person_age = #{personAge, jdbcType=int}-->
          <!--</if>-->
          <!--<if test="personSex !=null and personSex != ''.toString()">-->
            <!--and p.person_sex = #{personSex, jdbcType=VARCHAR}-->
          <!--</if>-->
          <!--<if test="personBirthday !=null and personBirthday != ''.toString()">-->
            <!--and p.person_birthday = #{personBirthday, jdbcType=VARCHAR}-->
          <!--</if>-->
    </select>
    <select id="selectAll" resultType="persons.dao.PersonDao">
        select <include refid="Person_List"/>
        from person
    </select>

    <sql id="Person_List">
    person_id "personId",
    person_name "personName",
    person_age "personAge",
    person_sex "personSex",
    person_birthday "personBirthday",
    createtime "createTime"
    </sql>
</mapper>